@page "/counter"
@inject SingletonService singletion
@inject TransientService transient
<h1>Counter</h1>

<p>Current count: @currentCount</p>
<p>SingleTon  count: @singletion.Value</p>
<p>Transient count: @transient.Value</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<input type="number" @bind="@currentCount" />
<MoviesList Movies="movies" />
@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
        transient.Value = currentCount;
        singletion.Value = currentCount;
    }

    private List<Movie> movies;

    protected override void OnInitialized()
    {
        movies = new List<Movie>();
        for (int i = 0; i <= 4; i++)
        {


            Movie movie = new Movie();
            movie.Title = "Counter " + i;
            movie.ReleaseDate = DateTime.Now;
            movies.Add(movie);
        }
    }
}
